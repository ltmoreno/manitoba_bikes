<%= render partial: 'common/navbar' %>
<main>
  <div class="mt-4">
    <div class="container">
      <!-- row -->
      <div class="row">
        <!-- col -->
        <div class="col-12">
            <!-- breadcrumb -->
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="#!">Home</a></li>
                <li class="breadcrumb-item"><a href="#!">Category</a></li>
                <li class="breadcrumb-item active" aria-current="page"><%= @category.present? ? @category.name : "All" %></li>
              </ol>
            </nav>
        </div>
      </div>
    </div>
  </div>
  <section class="mt-8 mb-lg-14 mb-8">
    <div class="container">
      <!-- row -->
      <div class="row">
        <!-- col -->
        <div class="col-lg-12">
          <!-- page header -->
          <div class="card mb-4 bg-light border-0">
            <!-- card body -->
            <div class="card-body p-9">
              <!-- title -->
              <h2 class="mb-0 fs-1"><%= @category.present? ? @category.name : "All" %> Bikes</h2>
            </div>
          </div>
          <!-- list icon -->
          <div class="d-lg-flex justify-content-between align-items-center">
            <div>
                <p class="mb-3 mb-md-0">
                  <span class="text-dark"><%= @bikes.count %></span>
                  Bicycle<%= @bikes.count > 1 ? "s" : "" %> found
                </p>
            </div>
            <!-- icon -->
            <div class="d-md-flex justify-content-between align-items-center">
              <div class="d-flex mt-2 mt-lg-0">
                <div class="me-2 flex-grow-1">
                    <!-- select option -->
                    <select class="form-select">
                      <option selected>Show: 50</option>
                      <option value="10">10</option>
                      <option value="20">20</option>
                      <option value="30">30</option>
                    </select>
                </div>
                <div>
                  <!-- select option -->
                  <select class="form-select">
                    <option value="Low to High">Price: Low to High</option>
                    <option value="High to Low">Price: High to Low</option>
                  </select>
                </div>
              </div>
            </div>
          </div>
          <%= render partial: "bikes", object: @bikes %>
        </div>
      </div>
    </div>
  </section>
</main>