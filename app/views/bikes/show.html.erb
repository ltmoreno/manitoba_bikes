<%= render partial: 'common/navbar' %>
<main>
  <div class="mt-4">
    <div class="container">
      <!-- row -->
      <div class="row">
        <!-- col -->
        <div class="col-12">
          <!-- breadcrumb -->
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="<%= category_path(@category.name)%>"><%= @category.name %></a></li>
              <li class="breadcrumb-item active" aria-current="page"><%= "#{@bike.brand.name} #{@bike.model}" %></li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>
  <section class="mt-8">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <div  >
            <%= image_tag(@bike.photo, alt: "Bike Icon") %>
          </div>
        </div>
        <div class="col-md-6">
            <div class="ps-lg-10 mt-6 mt-md-0">
              <!-- content -->
              <a href="<%= category_path(@category.name)%>" class="mb-4 d-block"><%= @category.name %> Bike</a>
              <!-- heading -->
              <h1 class="mb-1"><%= @bike.model %></h1>

              <div class="fs-4">
                  <!-- price -->
                  <span class="fw-bold text-dark"><%= number_to_currency(@bike.price) %></span>
              </div>
              <!-- hr -->
              <hr class="my-6" />

              <div class="mt-3 row justify-content-start g-2 align-items-center">
                <div class="col-xxl-4 col-lg-4 col-md-5 col-5 d-grid">
                  <!-- button -->
                  <!-- btn -->
                  <%= form_with url: cart_index_path, method: :post do %>
                    <%= hidden_field_tag(:id, @bike.id) %>
                    <%= button_tag class: "btn btn-primary ", type: "submit" do %>
                        <i class="feather-icon icon-shopping-bag me-2"></i>
                        Add to cart
                    <% end %>
                  <% end %>
                </div>
              </div>
              <!-- hr -->
              <hr class="my-6" />
              <div>
                <!-- table -->
                <table class="table table-borderless mb-0">
                  <tbody>
                    <tr>
                      <td>Brand:</td>
                      <td><%= @brand.name %></td>
                    </tr>
                    <tr>
                      <td>Availability:</td>
                      <td><%= @stocks == 0 ? "Out of Stock" : "In Stock" %></td>
                    </tr>
                    <tr>
                      <td>Color:</td>
                      <td><%= @bike.color %></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
        </div>
      </div>
    </div>
  </section>
  <section class="mt-lg-14 mt-8">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
            <ul class="nav nav-pills nav-lb-tab" id="myTab" role="tablist">
              <!-- nav item -->
              <li class="nav-item" role="presentation">
                <!-- btn -->
                <button
                  class="nav-link active"
                  id="product-tab"
                  data-bs-toggle="tab"
                  data-bs-target="#product-tab-pane"
                  type="button"
                  role="tab"
                  aria-controls="product-tab-pane"
                  aria-selected="true">
                  Product Details
                </button>
              </li>
            </ul>
            <!-- tab content -->
            <div class="tab-content" id="myTabContent">
              <!-- tab pane -->
              <div class="tab-pane fade show active" id="product-tab-pane" role="tabpanel" aria-labelledby="product-tab" tabindex="0">
                  <div class="my-8">
                    <div class="mb-5">
                        <!-- text -->
                        <h4 class="mb-1">Description</h4>
                        <p class="mb-0">
                          <%= @bike.description %>
                        </p>
                    </div>
                    <!-- content -->
                    <div class="mb-5">
                        <h5 class="mb-1">Available Stocks</h5>
                        <p class="mb-0"><%= @stocks %> Unit<%= @stocks > 0 ? "s" : "" %></p>
                    </div>
                    <div>
                        <h5 class="mb-1">Disclaimer</h5>
                        <p class="mb-0">
                          Image shown is a representation and may slightly vary from the actual product. Every effort is made to maintain accuracy of all information displayed.
                        </p>
                    </div>
                  </div>
              </div>
            </div>
        </div>
      </div>
    </div>
  </section>
</main>
